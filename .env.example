# API Configuration
# Backend API base URL for the chat service
VITE_APP_API_URL=/api/v1

# Server Configuration
FRONTEND_PORT=6184

# Application Configuration
# Base URL for the application (used for redirects and asset loading)
BASE_URL=http://localhost:{FRONTEND_PORT}

# =============================================================================
# Deployment Configuration
# =============================================================================
# Base URL for production deployment (for embeddable widgets, use relative paths)
VITE_APP_BASE_URL=/

# Application Metadata
# Display name of the chat application
VITE_APP_NAME=BNPBChatWidget

# Version number of the application
VITE_APP_VERSION=1.0.0

# Demo environment identifier (used for testing different configurations)
VITE_APP_DEMO=demo1

# Error Monitoring
# Sentry DSN for error tracking and monitoring (replace with your actual Sentry project DSN)
VITE_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
